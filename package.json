{
  "name": "grpc-kit",
  "description": "A gRPC KIT ðŸ§§ for Node.",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "https://github.com/103cuong/grpc-kit.git",
  "author": "Cuong Tran",
  "scripts": {
    "start:dev": "nodemon --ignore build/ --exec ts-node src/index.ts",
    "build": "rm -rf build && tsc",
    "start": "node ./build/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "build:protos": "cd scripts && ./build-proto.sh"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.1.4",
    "@grpc/proto-loader": "^0.5.5",
    "diana-js": "^0.7.0",
    "google-protobuf": "^3.13.0",
    "hades-ts": "^0.1.0",
    "hera-js": "^0.4.0",
    "juno-js": "^0.1.1",
    "lodash": "^4.17.20",
    "pg": "^8.3.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.4",
    "umzug": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/google-protobuf": "^3.7.3",
    "@types/node": "^12.12.7",
    "@types/umzug": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-promise": "^4.2.1",
    "grpc-tools": "^1.9.1",
    "grpc_tools_node_protoc_ts": "^4.1.3",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  }
}
